<!DOCTYPE html>

<html>

<head>
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <h1>Todo liste</h1>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>task</th>
        <th>status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% tasks.forEach(task => { %>
        <tr>
          <td>
            <%= task.id %>
          </td>
          <td>
            <a href="/detail/<%= task.id %>">
              <%= task.task %>
            </a>
          </td>
          <td>
            <%= task.status %>
          </td>
          <td>
            <a href="/form/<%= task.id %>">edit</a>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
  <a href="/form">new</a>
</body>

</html>